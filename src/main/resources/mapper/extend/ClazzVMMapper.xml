<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.briup.apps.poll3.dao.extend.ClazzVMMapper">
  <select id="selectAll" resultMap="ClazzVMResultMap">
    select * from poll_clazz
  </select>
  
  <!--  定义结果集 -->
    <resultMap type="com.briup.apps.poll3.bean.extend.ClazzVM" id="ClazzVMResultMap">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <association  column="grade_id" property="grade" 
        select="com.briup.apps.poll3.dao.GradeMapper.selectByPrimaryKey"></association>
        <association  column="charge_id" property="user" 
        select="com.briup.apps.poll3.dao.UserMapper.selectByPrimaryKey"></association>
       
    </resultMap>
    
    
  
</mapper>